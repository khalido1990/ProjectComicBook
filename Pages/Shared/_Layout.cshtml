              <li class="nav-item">
                  <a class="nav-link" asp-page="/Authors">Auteurs</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" asp-page="/Illustrator">Tekenaars</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" asp-page="/Comicbooks">Stripboeken</a>
              </li>
              <li class="nav-item">
                  <a class="nav-link" asp-page="/Browse">Browse</a>
              </li>
              <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Gegevens bewerken
              </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" asp-page="/UpdateAuthor">Auteurs aanpassen</a></li>
                    <li><a class="dropdown-item" asp-page="/UpdateIllustrator">Tekenaars aanpassen</a></li>
                    <li><a class="dropdown-item" asp-page="/UpdateComicbooks">Stripboeken aanpassen</a></li>
                </ul>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Collection">Collectie</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Login">Inloggen</a>
                </li>
            </li>
          </ul>
            <form class="d-flex" method="get" asp-page="/SearchResult">
                <input class="form-control me-2" name="Search" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Zoeken</button>
            </form>
        </div>
      </div>
    </nav>
