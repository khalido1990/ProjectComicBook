@page
@model ProjectComicBook.Pages.Login

@{
    ViewData["Title"] = "Home page";
    
}
@section Scripts
{
    <partial name="Shared/_ValidationScriptsPartial"/>
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    
    <form method="post">
        <div asp-validation-summary="All"></div>
        Username <input type="text" name="UserName" id="UserName" asp-for="UserName">
        Password <input type="password" name="Password" id="Password" asp-for="Password">
        <input type="checkbox" asp-for="KeepLoggedIn">
        <button type="submit" value="log" asp-page-handler="login">Login</button>
    </form>
    <h3>debug + @Model.KeepLoggedIn</h3>
    <form method="post">
        <div asp-validation-summary="All"></div>
        Username <input type="text" name="UserName" id="UserName" asp-for="UserName">
        Password <input type="password" name="Password" id="Password" asp-for="Password">
        <div>
            Confirm Password <input type="password" asp-for="Cpassword">
            <span asp-validation-for="Cpassword"></span>
        </div>
        name <input type="text" asp-for="Name">
        <button type="submit" value="reg" asp-page-handler="reg">Register</button>
        <h2>@Model.ErrorMsg</h2>
    </form>
    <form method="post">
            <button type="submit" value="logout" asp-page-handler="logout">Logout</button>
    </form>
</div>
</body>
</html>